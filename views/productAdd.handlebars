<form action="/product/addproduct" method="POST" enctype="multipart/form-data">
    <p>ADD PRODUCTS</p>
    <label for="title">Title</label>
    <input type="text" name="title" id="title" autofocus tabindex="0"><br>

    <label for="price">Price</label>
    <input type="text" name="price" id="price" tabindex="0"><br>

    <label for="description">Description</label>
    <textarea name="description" id="description" tabindex="0" cols="30" rows="10"></textarea><br>

    <label for="category">Category</label>
    <input type="text" name="category" id="category" tabindex="0"><br>

    <label for="quantity">Quantity</label>
    <input type="number" name="quantity" id="quantity" tabindex="0"><br>

    <label for="best">Best Seller</label>
    <select name="best" tabindex="0">
        <option value="no">No</option>
        <option value="yes">Yes</option>
    </select><br>

    <label for="photo">Product Picture</label>
    <input type="file" name="photo" id="photo" tabindex="0"><br>

    <input type="submit" value="ADD" tabindex="0">
</form>