<form action="/product/update/{{this.id}}?method=PUT" method="POST">
    <p>UPDATE PRODUCT</p>
    <label for="title">Title</label>
    <input type="text" name="title" id="title" autofocus tabindex="0" value="{{title}}"><br>

    <label for="price">Price</label>
    <input type="text" name="price" id="price" tabindex="0" value="{{price}}"><br>

    <label for="description">Description</label>
    <textarea name="description" id="description" tabindex="0" cols="30" rows="10">{{description}}</textarea><br>

    <label for="category">Category</label>
    <select name="category" tabindex="0">
        <option value="perfume"{{#if_eq this.category "perfume"}} selected {{/if_eq}}>Perfume</option>
        <option value="watch"{{#if_eq this.category "watch"}} selected {{/if_eq}}>Watch</option>
        <option value="sunglasses"{{#if_eq this.category "sunglasses"}} selected {{/if_eq}}>Sunglasses</option>
        <option value="accessories"{{#if_eq this.category "accessories"}} selected {{/if_eq}}>Computer Accessories</option>
    </select><br>

    <label for="quantity">Quantity</label>
    <input type="number" name="quantity" id="quantity" tabindex="0" value="{{quantity}}"><br>

    <label for="best">Best Seller</label>
    <select name="best" tabindex="0">
        <option value="no"{{#if_eq this.best "no"}} selected {{/if_eq}}>No</option>
        <option value="yes"{{#if_eq this.best "yes"}} selected {{/if_eq}}>Yes</option>
    </select><br>

    <input type="submit" value="ADD" tabindex="0">
</form>